<h1>Passenger Details</h1>

<section class="info-box">

  <article >
    <h3>Name: </h3>
    <%= @passenger.name %>

    <h3>Total Cost: </h3>
    <%= cents_to_dollars(@passenger.total_cost) %>
  </article>

  <ul>
    <li><%= link_to "Edit", edit_passenger_path(@passenger) %><li>
    <li><%= link_to("Delete", passenger_path(@passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete: #{ @passenger.name }? \nThis will also delete all of the passenger's trips." }) %></li>
    <li><%= link_to "Request Trip", passenger_trips_path(@passenger), method: :post %><li>
  <ul>
</section>

<section class="trips">
  <h3> Passenger Trips</h3>
  <%= render partial: "layouts/trip-list", locals: {model: @passenger} %>
</section>
