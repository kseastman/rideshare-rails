<h2>Trips</h2>

<ul>
<%= paginate @trips %>
<% @trips.each do |trip| %>
  <li>
    <strong><%= link_to(trip.id, trip_path(trip)) %></strong>
    <%= link_to("Edit", edit_trip_path(trip)) %>
    <%= link_to("Delete", trip_path(trip), method: :delete, data: { confirm: "Are you sure you want to delete: #{ trip.id }?" }) %>
  </li>
<% end %>
</ul>
