<h2>Passenger Details</h2>

<section class="info-box">

  <article >
    <h3>Name: </h3>
    <%= @passenger.name %>

    <h3>Total Cost: </h3>
    <%= "$ #{@passenger.total_cost}" %>
  </article>

  <ul>
    <li><%= link_to "Edit", edit_passenger_path(@passenger) %><li>
    <li><%= link_to("Delete", passenger_path(@passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete: #{ @passenger.name }?" }) %></li>
    <li><%= link_to("New Trip", controller: "trips", passenger_id: @passenger.id, driver_id: 1, date: DateTime.now, cost: rand(1000..99999)}) %></li>
  <ul>
</section>

<section class="trips">
  <h3> Passenger Trips</h3>
  <%= render partial: "layouts/trip-list", locals: {model: @passenger} %>
</section>
