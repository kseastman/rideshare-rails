



<!-- <article class="list-row"> -->
  <section class="r-cell">
    <%= link_to(trip.id, trip_path(trip))%>
  </section>

  <section class="r-cell">
    <%= trip.date.strftime("%m/%d/%Y") %>
  </section>


  <section class="r-cell c2-fr">
    <% passenger = trip.passenger %>
    <%= link_to(passenger.name, passenger_path(passenger)) %>
  </section>


  <section class="r-cell c2-fr">
    <% driver = trip.driver %>
    <%= link_to(driver.name, driver_path(driver)) %>
  </section>

  <section class="r-cell">
    <%= "$ #{(trip.cost / 100).round(2)}" %>
  </section>

  <section class="r-cell">
    <% if trip.rating %>
    <%= trip.rating %>
    <% else %>
    <%= form_for trip do |f| %>
    <%= f.number_field(:rating, in: 1..5) %>
    <%= f.submit("add rating") %>
    <% end %>
    <% end %>
  </section>
